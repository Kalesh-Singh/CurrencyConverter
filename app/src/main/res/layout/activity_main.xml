<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kaleshsingh.currencyconverter.MainActivity">

    <ImageView
        android:id="@+id/currencyImageView"
        android:layout_width="395dp"
        android:layout_height="337dp"
        app:srcCompat="@drawable/currency"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/dollarAmountEditText" />

    <Button
        android:id="@+id/convertButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:onClick="convertDollarsToPounds"
        android:text="Convert"
        app:layout_constraintLeft_toLeftOf="@+id/dollarAmountEditText"
        app:layout_constraintRight_toRightOf="@+id/dollarAmountEditText"
        app:layout_constraintTop_toBottomOf="@+id/dollarAmountEditText" />

    <EditText
        android:id="@+id/dollarAmountEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Enter amount in dollars"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
